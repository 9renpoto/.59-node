{
  "name": "@app/app",
  "private": true,
  "author": "github.com/9renpoto",
  "scripts": {
    "build": "lerna run build --include-dependents",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "coverage": "",
    "lint": "run-p -l lint:*",
    "lint:es": "npx eslint . --ext=ts,tsx",
    "lint:md": "textlint README.md packages/**/*.md",
    "lint:ptr": "prettier --check './packages/**/*.{js,jsx,ts,tsx}'",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://npm.pkg.github.com/\"'",
    "test": "lerna run --parallel test"
  },
  "devDependencies": {
    "@9renpoto/eslint-config-typescript": "7.3.0",
    "@9renpoto/textlint-config-ja": "7.3.0",
    "@9renpoto/tsconfig": "7.3.0",
    "@monorepo-utils/workspaces-to-typescript-project-references": "2.4.3",
    "@secretlint/secretlint-rule-preset-recommend": "2.1.1",
    "@types/faker": "5.1.5",
    "@types/jest": "26.0.20",
    "@types/rosie": "0.0.38",
    "can-npm-publish": "1.3.3",
    "eslint": "7.17.0",
    "faker": "5.1.0",
    "husky": "4.3.7",
    "jest": "26.6.3",
    "lcov-result-merger": "3.1.0",
    "lerna": "3.22.1",
    "lerna-changelog": "1.0.1",
    "lint-staged": "10.5.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "prettier-plugin-package": "1.3.0",
    "rosie": "2.0.1",
    "secretlint": "2.1.1",
    "textlint": "11.7.7",
    "ts-jest": "26.4.4",
    "typescript": "3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "secretlint"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{js,jsx,json,yml,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}

{
  "name": "@app/app",
  "private": true,
  "author": "github.com/9renpoto",
  "scripts": {
    "build": "lerna run build --include-dependents",
    "build-storybook": "yarn workspace @app/ui build-storybook",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "lint": "run-p -l lint:*",
    "lint:es": "eslint . --ext=ts,tsx",
    "lint:fmt": "prettier --check './{apps,packages}/**/*.{js,jsx,ts,tsx,json}'",
    "lint:md": "textlint README.md packages/**/*.md",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://npm.pkg.github.com/\"'",
    "test": "lerna run --parallel test"
  },
  "devDependencies": {
    "@9renpoto/eslint-config-typescript": "7.5.0",
    "@9renpoto/stylelint-config": "7.5.0",
    "@9renpoto/textlint-config-ja": "7.5.0",
    "@9renpoto/tsconfig": "7.5.0",
    "@commitlint/cli": "16.0.1",
    "@commitlint/config-conventional": "16.0.0",
    "@monorepo-utils/workspaces-to-typescript-project-references": "2.7.4",
    "@secretlint/secretlint-rule-preset-recommend": "4.1.3",
    "@testing-library/jest-dom": "5.16.1",
    "@testing-library/preact": "2.0.1",
    "@types/faker": "5.5.9",
    "@types/jest": "27.4.0",
    "@types/rosie": "0.0.40",
    "can-npm-publish": "1.3.6",
    "eslint": "8.6.0",
    "faker": "5.5.3",
    "husky": "7.0.4",
    "jest": "27.4.5",
    "lerna": "4.0.0",
    "lerna-changelog": "2.2.0",
    "lint-staged": "12.1.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.5.1",
    "prettier-plugin-organize-imports": "2.3.4",
    "prettier-plugin-package": "1.3.0",
    "rosie": "2.1.0",
    "secretlint": "4.2.0",
    "stylelint": "14.2.0",
    "textlint": "12.1.0",
    "ts-jest": "27.1.2",
    "typescript": "4.5.4"
  },
  "lint-staged": {
    "*": [
      "secretlint"
    ],
    "*.md": [
      "prettier --write",
      "textlint --fix",
      "remark"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "stylelint --fix",
      "eslint --fix"
    ],
    "*.{js,jsx,json,yml}": [
      "prettier --write"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-prettier"
    ]
  },
  "stylelint": {
    "extends": [
      "@9renpoto/stylelint-config"
    ]
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}

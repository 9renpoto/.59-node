{
  "name": "@app/app",
  "private": true,
  "author": "github.com/9renpoto",
  "scripts": {
    "build": "turbo build",
    "storybook": "npm run storybook -w @app/ui",
    "build-storybook": " npm run build-storybook -w @app/ui",
    "clean": "turbo run clean",
    "lint": "eslint . --ext=ts,tsx",
    "stylelint": "stylelint \"**/*.css\"",
    "test": "npm run test --workspaces"
  },
  "devDependencies": {
    "@9renpoto/eslint-config-typescript": "^7.6.0",
    "@9renpoto/stylelint-config": "^7.7.2",
    "@9renpoto/tsconfig": "^7.6.0",
    "@types/rosie": "^0.0.42",
    "husky": "^8.0.3",
    "jest": "^29.0.0",
    "lint-staged": "^14.0.0",
    "rosie": "^2.1.0",
    "turbo": "^1.9.3",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "deno fmt",
      "deno lint",
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ],
    "*.{md,json,js}": [
      "deno fmt"
    ]
  },
  "stylelint": {
    "extends": [
      "@9renpoto/stylelint-config"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  }
}

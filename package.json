{
  "name": "@app/app",
  "private": true,
  "author": "github.com/9renpoto",
  "scripts": {
    "build": "lerna run build --include-dependents",
    "build-storybook": "yarn workspace @app/ui build-storybook",
    "bump": "lerna version --no-git-tag-version --no-push && lerna-changelog",
    "clean": "lerna run clean --parallel && lerna clean",
    "lint": "run-p -l lint:*",
    "lint:es": "eslint . --ext=ts,tsx",
    "lint:fmt": "prettier --check './{apps,packages}/**/*.{js,jsx,ts,tsx,json}'",
    "lint:md": "textlint README.md packages/**/*.md",
    "release": "lerna exec --no-bail -- 'can-npm-publish && npm publish --registry=\"https://npm.pkg.github.com/\"'",
    "test": "lerna run --parallel test"
  },
  "devDependencies": {
    "@9renpoto/eslint-config-typescript": "7.4.0",
    "@9renpoto/stylelint-config": "7.4.0",
    "@9renpoto/textlint-config-ja": "7.4.0",
    "@9renpoto/tsconfig": "7.4.0",
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@monorepo-utils/workspaces-to-typescript-project-references": "2.5.1",
    "@secretlint/secretlint-rule-preset-recommend": "2.1.1",
    "@testing-library/jest-dom": "5.11.10",
    "@testing-library/preact": "2.0.1",
    "@types/faker": "5.5.1",
    "@types/jest": "26.0.22",
    "@types/rosie": "0.0.38",
    "can-npm-publish": "1.3.3",
    "eslint": "7.24.0",
    "faker": "5.5.3",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lerna": "4.0.0",
    "lerna-changelog": "1.0.1",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "prettier-plugin-organize-imports": "1.1.1",
    "prettier-plugin-package": "1.3.0",
    "rosie": "2.1.0",
    "secretlint": "2.1.1",
    "stylelint": "13.12.0",
    "textlint": "11.9.0",
    "ts-jest": "26.5.4",
    "typescript": "4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*": [
      "secretlint"
    ],
    "*.md": [
      "prettier --write",
      "textlint --fix",
      "remark"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "stylelint --fix",
      "eslint --fix"
    ],
    "*.{js,jsx,json,yml}": [
      "prettier --write"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "preset-prettier"
    ]
  },
  "stylelint": {
    "extends": [
      "@9renpoto/stylelint-config"
    ]
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}
